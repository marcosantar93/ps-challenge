{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom",
    ],
    "target": "ES6",
    "jsx": "react-jsx",
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}